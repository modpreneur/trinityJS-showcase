extends layout.pug
block content
    h2 Trinity Form
    form(data-ng-scope="test-form" action="/form" method="post")
        div
            label(for="test-form-name") Name: &nbsp;
            input(id="test-form-name" type="text" name="name")
        div
            label(for="test-form-photo") Photo:
            input(id="test-form-photo" type="file" name="photo" multiple)
        div
            select(name="test-form-select")
                option(value=1) 'test'
                option(value=2) 'test2'
        div
            button(type="submit") Submit
    h2 File test
    div
        input(data-ng-scope="testFile" type="file")
        button(data-ng-scope="sendFileBtn") Send file